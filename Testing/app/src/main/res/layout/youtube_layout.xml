<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yooutube_thumbnail"
        android:layout_marginRight="10dp"
        android:src="@drawable/default_pic"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="video_title"
        android:id="@+id/video_title"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/yooutube_thumbnail"
        android:layout_toEndOf="@+id/yooutube_thumbnail"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ff1b1b1b" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="video_uploader"
        android:id="@+id/video_uploader"
        android:layout_toRightOf="@+id/yooutube_thumbnail"
        android:layout_toEndOf="@+id/yooutube_thumbnail"
        android:layout_below="@+id/video_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffdd0c2e" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="video_description"
        android:id="@+id/video_description"
        android:layout_below="@+id/yooutube_thumbnail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5dp"
        android:maxLines="3"
        android:textColor="#ff0a26ee" />


</RelativeLayout>